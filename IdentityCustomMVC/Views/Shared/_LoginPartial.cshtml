@using IdentityCustomMVC.Entities;
@using Microsoft.AspNetCore.Identity
@using IdentityCustomMVC.Models;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> userManager

@if (SignInManager.IsSignedIn(User))
{
    <p>Bem Vindo, <b>&nbsp;@User.Identity.Name</b>  </p>
    <ul class="btn-group">
        <form method="post" asp-controller="account" asp-action="logout">
            <button type="submit" class="nav-link btn btn-link" style="width:auto">
               Sair
            </button>
        </form>
   
        <a class="nav-link" asp-controller="account" asp-action="ChangePassword">Alterar Senha</a>

    </ul>
}
else
{
   @* <ul class="nav-item">
        <a class="nav-link" asp-controller="account" asp-action="register">Registrar</a>        
    </ul>*@
    <ul class="nav-item">
        <a class="nav-link" asp-controller="account" asp-action="login">Login</a>
    </ul>
}
