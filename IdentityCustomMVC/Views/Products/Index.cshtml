@model IEnumerable<IdentityCustomMVC.Entities.Product>

@{
    ViewData["Title"] = "Produtos";
}



<div class="container">
    <h1 class="text-center mb-5">@ViewData["Title"]</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Novo Produto</a>
    </p>
    <div class="card">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                <div class="btn-group">
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

