@model IdentityCustomMVC.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Alterar Senha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text">@ViewData["Title"]</h1>
<h5 class="text">Digite sua nova senha e confirme.</h5>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPassword">          
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Email" class="form-control" />
            <input type="hidden" asp-for="Token" class="form-control" />
            <div class="form-group mt-3">
                <input type="submit" value="Alterar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


