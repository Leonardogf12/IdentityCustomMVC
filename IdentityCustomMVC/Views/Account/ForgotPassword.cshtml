@model IdentityCustomMVC.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Esqueceu a Senha ?";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <h1 class="col-md-6">@ViewData["Title"]</h1>
                <h5 class="col-md-6">Digite abaixo o email utilizado no cadastro da conta que nós enviaremos um email para redefinição.</h5>

                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-md-4 mt-3">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12 mt-4">
                        <input type="submit" value="Enviar" class="btn bg-gradient-primary" />
                        <a class="btn bg-gradient-secondary" asp-action="Login" asp-controller="Account">Login</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

