@model IdentityCustomMVC.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Esqueceu a Senha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text">@ViewData["Title"]</h1>
<h5 class="text">Digite abaixo o email utilizado no cadastro da conta.</h5>

<div class="row mt-5">
    <div class="col-md-4">
        @if (Model?.EmailSent == true)
        {
            <div class="alert alert-success" role="alert">
                Foi enviado um email para seu email de registro informado.
            </div>
        }
        else
        {
            <form asp-action="ForgotPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
              @*  <div class="form-group form-check mt-1">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="EmailSent" /> @Html.DisplayNameFor(model => model.EmailSent)
                    </label>
                </div>*@
                <div class="form-group mt-4">
                    <input type="submit" value="Enviar" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Login" asp-controller="Account">Login</a>
                </div>
            </form>
        }

    </div>
</div>


