@model IdentityCustomMVC.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Alterar Senha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">

    <div class="row d-flex justify-content-center">
        <div class="col-md-4 position-fixed">
           
            <section class="col-md-4 position-fixed">
                @if (ViewBag.IsSuccess == true)
                {
                    <div class="alert alert-default-success mb-3 mt-3" role="alert">
                        Senha alterada com sucesso!.
                    </div>
                }
                <form asp-action="ChangePassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="d-flex justify-content-center">

                        <div class="form-group">
                            <div class="text-center col-md-3">
                                <img class="rounded mb-4 mt-5" src="~/img/lock.png" width="100" height="100" />
                            </div>
                        </div>
                    </div>
                    <div class="form-floating">
                        <label asp-for="CurrentPassword" class="form-label"></label>
                        <input asp-for="CurrentPassword" class="form-control form-control-lg" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating mt-2">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" class="form-control form-control-lg" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating mt-2">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Salvar" class="btn btn-md bg-gradient-primary" />
                        <a class="btn btn-md bg-gradient-danger" asp-action="Index" asp-controller="Home">Cancelar</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
