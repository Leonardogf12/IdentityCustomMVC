@model IEnumerable<IdentityRole>

<table id="dtRoles" class="table table-hover">
    <thead>
        <tr>
            <th class="p-4">
                <div class="form-check">
                    <label class="form-check-label p-2">
                        <input class="form-check-input" type="checkbox" id="checkAll">
                        <span class="form-check-sign"></span>
                    </label>
                </div>
            </th>  
            
            <th>@Html.DisplayNameFor(model =>model.Name)</th>  
            
            <th>Ações</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td class="text-left">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" id="@item.Id" name="LISTACHECK">
                            <span class="form-check-sign"></span>
                        </label>
                    </div>
                </td>    
                
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>              
              
                <td>
                    <div>
                        <i type="button" class="fas fa-bars" data-toggle="dropdown"></i>
                        <ul class="dropdown-menu">
                            <li><a class="nav-link" style="" asp-action="Update" asp-route-id="@item.Id">Editar</a></li>
                            <li><a class="nav-link" asp-action="Delete" asp-route-id="@item.Id" method="post">Excluir</a></li>
                        </ul>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>