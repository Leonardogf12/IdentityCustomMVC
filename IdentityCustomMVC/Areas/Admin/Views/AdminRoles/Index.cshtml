@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}
<div class="content-wrapper">
    <div class="content">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-12">
                    <div class="col-sm-12">
                        <h1 class="text-center">@ViewData["Title"]</h1>
                    </div>
                </div>
            </div>
        </section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="btn-group">
                                <a asp-action="Create" class="btn bg-gradient-primary">Nova Role</a>
                                <a class="btn bg-gradient-danger" onclick="DeleteRolesIndex()">Excluir</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body" id="listRolesRegisters">
                                    <partial name="ListRolesPartial" model="Model" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="~/theme/plugins/jquery/jquery.min.js" type="text/javascript"></script>
<script src="~/theme/dist/js/demo.js" type="text/javascript"></script>
<script src="~/js/RolesJs/Roles.js" type="text/javascript"></script>