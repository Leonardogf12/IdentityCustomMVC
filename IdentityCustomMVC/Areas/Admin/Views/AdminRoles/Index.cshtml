@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

<h1 class="text-center mb-5">Roles</h1>

<div class="container">
    <a asp-action="Create" class="btn btn-secondary mb-3">Nova Role</a>
    <div class="card">
        <div class="card-body">
            <div class="row col-md-12">

                <table class="table table-hover">
                    <tr>
                        @*<th>ID</th>*@
                        <th class="col-md-6">
                            NOME
                        </th>
                        <th class="col-md-6">
                            AÇÕES
                        </th>
                    </tr>
                    @foreach (var role in Model)
                    {
                        <tr>
                        @* <td>
                            @role.Id
                            </td>*@
                            <td>
                                @role.Name
                            </td>
                            @*<td i-role="@role.Id"></td>*@
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary" style="" asp-action="Update" asp-route-id="@role.Id">Editar</a>
                                    <form asp-action="Delete" asp-route-id="@role.Id" method="get">
                                        <button type="submit" style="" class="btn btn-danger">Deletar</button>
                                    </form>
                                </div>
                            </td>
                            @* <td></td>*@
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
