@using IdentityCustomMVC.Entities;
@model RoleEdit

<div class="container">
<h1 class="text-center mb-5">Atualizar Role</h1>
    <div class="card">
        <div class="card-body">
           
            <div asp-validation-summary="All" class="text-danger"></div>

            <form method="post">
                <input type="hidden" name="roleName" value="@Model.Role.Name" />
                <input type="hidden" name="roleId" value="@Model.Role.Id" />

                <h2 class="bg-secondary p-1 text-white">Incluir na Role : @Model.Role.Name</h2>
                <table class="table table-bordered table-sm">
                    @if (Model.NonMembers.Count() == 0)
                    {
                        <tr><td colspan="2">Todos os usuários pertecem a esta role</td></tr>
                    }
                    else
                    {
                        <tr>
                            <th class="">Usuários</th>
                            <th class="">Ações</th>
                           
                        </tr>
                        @foreach (ApplicationUser user in Model.NonMembers)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>
                                    <input type="checkbox" name="AddIds" value="@user.Id">
                                </td>
                            </tr>
                        }
                    }
                </table>

                <h2 class="bg-secondary p-1 text-white">Remover da Role : @Model.Role.Name</h2>
                <table class="table table-bordered table-sm">
                    @if (Model.Members.Count() == 0)
                    {
                        <tr><td colspan="2">Não existem usuários nesta Role</td></tr>
                    }
                    else
                    {
                        <tr>
                            <th class="">Usuários</th>
                            <th class="">Ações</th>

                        </tr>
                        @foreach (ApplicationUser user in Model.Members)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>
                                    <input type="checkbox" name="DeletarIds" value="@user.Id">
                                </td>
                            </tr>
                        }
                    }
                </table>
                <button type="submit" class="btn btn-success">Salvar</button>
                <a asp-action="Index" class="btn btn-danger">Cancelar</a>
            </form>

        </div>
    </div>
</div>
