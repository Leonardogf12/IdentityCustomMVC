@using IdentityCustomMVC.Entities;
@model IEnumerable<ApplicationUser>

<h1 class="text-center mb-5">Usuários</h1>

@if (Model.Any())
{
    <div class="container">
        <a asp-action="Register" asp-controller="Account" asp-area=""
           class="btn btn-primary mb-3" style="width:auto">
            Novo Usuário
        </a>
        <div class="card">
            <div class="card-body">

                <table class="table">
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Usuário</th>
                        <th>Ações</th>
                    </tr>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                @user.Id
                            </td>
                            <td>
                                @user.Name
                            </td>
                            <td>
                                @user.UserName
                            </td>
                            <td>
                                <div class="btn-group">
                                  @*  <a asp-action="Edit" asp-controller="Account" asp-route-id="@user.Id" asp-area=""
                                       class="btn btn-primary">
                                        Editar
                                    </a>*@
                                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-danger">
                                            Deletar
                                        </button>
                                    </form>
                                  
                                </div>
                                
                            </td>
                        </tr>
                    }
                </table>              
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            Não existem usuários
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Clique no botão para criar um usuário
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Account" asp-area="" asp-action="Register">
                Novo Usuário
            </a>
        </div>
    </div>
}